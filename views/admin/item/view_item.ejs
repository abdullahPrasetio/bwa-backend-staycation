<%- include('../../partials/header.ejs') %> 

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %> 
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../../partials/navbar.ejs') %> 
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../partials/alert.ejs') %> 
          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Item</h1>
          <!-- End Heading -->
          <% if(action=='view'){ %>
            <nav>
              <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#show-item" role="tab"
                 aria-controls="show-item" aria-selected="true">Show Item</a>
                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#add-item" role="tab"
                 aria-controls="add-item" aria-selected="false">Add Item</a>
              </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
              <%- include('show_table_item.ejs') %> 
              <%- include('add_item.ejs') %> 
            </div>
            <% } else if (action=='show image') { %> 
              <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                  <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#show-image" role="tab"
                   aria-controls="show-item" aria-selected="true">Show Image</a>
                </div>
              </nav>
              <div class="tab-content" id="nav-tabContent">
                <%- include('show_image_item.ejs') %> 
              </div>
            <% }else{ %> 
              <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                  <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#edit-item" role="tab"
                   aria-controls="edit-item" aria-selected="true">Edit Item</a>
                </div>
              </nav>
              <div class="tab-content" id="nav-tabContent">
                <%- include('edit_item.ejs') %> 
              </div>
            <% } %> 
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../partials/footer.ejs') %> 
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

 
  <%- include('../../partials/script.ejs') %> 
  <script>
    CKEDITOR.replace( 'about' );
</script>
