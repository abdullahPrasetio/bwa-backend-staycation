<div class="tab-pane fade" id="show-activity">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form method="POST" action="/admin/item/add/activity" enctype="multipart/form-data">
                            <div class="form-group">
                              <label for="name">Name</label>
                              <input type="text" name="name" class="form-control" id="name" placeholder="Enter name" required>
                            </div>
                            <div class="form-group">
                              <label for="type">Type</label>
                              <input type="text" name="type" class="form-control" id="type" placeholder="Enter type" required>
                            </div>
                            <div class="form-group">
                              <label for="image">Image</label>
                              <input type="file" name="image" class="form-control" id="image"required>
                            </div>
                            <input type="hidden" name="itemId" value="<%= itemId%>" >
                            <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<activity.length; i++){ %>
                                    <tr>
                                        <td><%= i+1 %> </td>
                                        <td><%= activity[i].name %> </td>
                                        <td><%= activity[i].type %> </td>
                                        <td><img src="https://admin-staycation-id.herokuapp.com/<%= activity[i].imageUrl %>" alt="" width="70" height="70"> </td>
                                        <td>
                                            <a href="javascript:void()" type="button" class="btn btn-warning btn-sm btn-circle button-update" 
                                                data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>" data-type="<%= activity[i].type %>">
                                                <i class="fas fa-edit"></i></a>
                                            <form action="/admin/item/<%= itemId%>/activity/<%= activity[i].id%>?_method=DELETE" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm btn-circle"><i class="fas fa-trash"></i></button>
                                            </form>            
                                        </td>
                                    </tr>
                                <% } %> 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
