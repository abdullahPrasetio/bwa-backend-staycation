<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="nav-profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%=item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" value="<%= item.title %>" placeholder="Enter title" id="title" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" name="price" value="<%= item.price %>" placeholder="Enter price" id="price" required>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" name="city" value="<%= item.city %>" placeholder="Enter city" id="city" required>
                </div>
                <div class="form-group">
                    <label for="categoryId">Category</label>
                    <select name="categoryId" id="categoryId" class="form-control">
                        <option value="<%= item.categoryId.id%>">---<%= item.categoryId.name%>---</option>
                        <% for(let i=0; i<category.length; i++){ %>
                            <option value="<%= category[i].id %>"><%= category[i].name %> </option>
                        <% } %>  
                    </select>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" name="image" placeholder="Enter image" id="image" multiple >
                </div>
                <div class="form-group">
                    <label for="about">Description</label>
                    <textarea class="form-control" name="about" id="" rows="3"><%= item.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn-block btn btn-sm btn-primary" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>