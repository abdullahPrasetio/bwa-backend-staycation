<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-warning">Back</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="http://localhost:3000/<%= booking.payments.proofPayment %>"  class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="image" style="width:100%; display:block">
                <% if(booking.payments.status=='Proses'){ %> 
                
                    <form action="/admin/booking/<%=booking.id %>/confirmation?_method=PUT" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="fas fa-check"></i>
                            Confirmation
                        </button>
                    </form>  
                    <form action="/admin/booking/<%=booking.id %>/reject?_method=PUT" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-times"></i>
                            Reject
                        </button>
                    </form>  
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead> 
                            <tr>
                                <th>Name</th>
                                <th>Total Bayar</th>
                                <th>Bank From</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %> </td>
                                <td><%= booking.total%> </td>
                                <td><%= booking.payments.bankFrom %> </td>
                                <td><%= booking.itemId.title %> </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>